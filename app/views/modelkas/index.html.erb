<p id="notice"><%= notice %></p>

<h1>Modelkas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modelkas.each do |modelka| %>
      <tr>
        <td><%= modelka.name %></td>
        <td><%= link_to 'Show', modelka %></td>
        <td><%= link_to 'Edit', edit_modelka_path(modelka) %></td>
        <td><%= link_to 'Destroy', modelka, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Modelka', new_modelka_path %>
